{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true, 
        "lib": [
            "es2017"
        ],
        "types": [
            "node", "express"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
  }